<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:timeline="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_localteam"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="right|center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/local_player"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Gabriel Jesus"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                        android:textColor="@color/text_1"
                        android:textIsSelectable="false"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/local_assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gabriel Jesus"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                        android:textColor="@color/text_1"
                        android:textIsSelectable="false"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <ImageView
                    android:id="@+id/img_local_type"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_ball" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.alorma.timeline.RoundTimelineView
                android:id="@+id/roundTimelineView"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                timeline:timeline_drawInternal="true"
                timeline:timeline_indicatorColor="@color/background"
                timeline:timeline_indicatorSize="8dp"
                timeline:timeline_internalColor="@color/background"
                timeline:timeline_internalPadding="2dp"
                timeline:timeline_lineColor="@color/line"
                timeline:timeline_lineStyle="linear"
                timeline:timeline_lineWidth="1dp"
                timeline:timeline_type="middle" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="48"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_1"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="'"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_1"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lay_visitorteam"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="left|center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/img_visitor_type"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_ball" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/visitor_player"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Gabriel Jesus"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                        android:textColor="@color/text_1"
                        android:textIsSelectable="false"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/visitor_assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gabriel Jesus"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                        android:textColor="@color/text_1"
                        android:textIsSelectable="false"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>